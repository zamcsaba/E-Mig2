<Page
    x:Class="E_Mig2.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E_Mig2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF202020">
        <Grid Margin="0" HorizontalAlignment="Center" Width="370">
            <TextBlock x:Name="textBlock" Margin="32,80,25,0" TextWrapping="Wrap" Text="Belépés" VerticalAlignment="Top" Height="70" Foreground="#FFFEFEFE" FontSize="48" FontWeight="Light" TextAlignment="Center"/>
            <TextBox x:Name="textBox" Height="43" Margin="32,182,25,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="24" PlaceholderText="Felhasználónév" BorderThickness="0"/>
            <PasswordBox x:Name="passwordBox" Margin="32,243,25,0" VerticalAlignment="Top" Height="42" PlaceholderText="Jelszó" FontSize="24" BorderThickness="0"/>
            <Button x:Name="button" Content="Belépés" HorizontalAlignment="Right" Margin="0,304,25,0" VerticalAlignment="Top" BorderThickness="0" Height="42" Background="#FF7A7A7A" FontSize="24" Width="125"/>
            <Button x:Name="button_Copy" Content="Regisztráció" HorizontalAlignment="Stretch" Margin="32,488,25,0" VerticalAlignment="Top" BorderThickness="0" Height="42" Background="#FF7A7A7A" FontSize="24"/>
        </Grid>
    </Grid>
</Page>
